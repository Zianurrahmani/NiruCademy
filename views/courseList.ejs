<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CourseList</title>
</head>
<h1>Course List</h1>
<body>
    <p>
        <a href="/course/add">Add New Course</a>
    </p>
    <table border="1">
        <thead>
            <tr>
                <th>NO</th>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% courses.forEach((el, i) => { %>
                <tr>
                    <td><%= i + 1 %></td>
                    <td><%= el.name %></td>
                    <td><%= el.Category.name %></td>
                    <td><%= el.formattedPrice %></td>
                    <td>
                        <a href="">Enroll</a> |
                        <a href="">Detail</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>